<%= form_for @group do |f| %>
<div class="form-group">
  <div class="form-group string optional">
    <%= f.label "Title | 标题", :class => "string optional control-label" %>
    <%= f.text_field :title, :class => "string optional form-control" %>
  </div>

  <div class="form-group string optional">
    <%= f.label "Description | 叙述", :class => "string optional control-label" %>
    <%= f.text_area :description, :class => "string optional form-control" %>
  </div>
</div>
<%= f.submit "Submit | 提交", class: "btn btn-primary", data:{ disable_with: "Submitting..." } %>
<% end %>
